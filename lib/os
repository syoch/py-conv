#pragma once
#ifndef _OS_
#define _OS_

#ifdef WIN32
#include "ntpath"
#endif // WIN32

#include "base"

class os
{
public:
	path path;
	void mkdir(Any name, bool exist_ok);
	void rmdir(Any name);
	void renames(Any old, Any _new);
};

class OSError
{
private:
	Any msg;

public:
	OSError(Any msg) : msg(msg) {}
	Any what() { return msg; }
};

#endif // !_OS_